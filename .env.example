# ============================================================
# Real-Time E-Commerce Order System - Environment Configuration
# Copy this file to .env and update with your actual values
# ============================================================

# ---- Application ----
ENVIRONMENT=development
APP_NAME=E-Commerce Order System
APP_VERSION=1.0.0

# ---- Database ----
DATABASE_URL=postgresql+asyncpg://orderuser:orderpass@postgres:5432/orders_db
DATABASE_TEST_URL=postgresql+asyncpg://orderuser:orderpass@postgres:5432/orders_test_db
DB_USER=orderuser
DB_PASSWORD=orderpass
DB_NAME=orders_db

# ---- Redis ----
REDIS_URL=redis://redis:6379/0

# ---- Kafka ----
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID=order-system-group

# ---- JWT Authentication ----
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- Rate Limiting ----
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_ORDER_CREATE=20
RATE_LIMIT_WEBHOOK_REGISTER=10

# ---- Webhook ----
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# ---- Monitoring ----
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
